<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">



        <EditText
            android:id="@+id/username_et1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:maxLength="20"
            android:hint="请输入你的账号"/>




        <EditText
            android:id="@+id/password_et1"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:layout_marginTop="100dp"
            android:maxLength="20"
            android:hint="请输入你的账号密码" />


        <CheckBox
            android:id="@+id/ismanager"
            android:text="管理员登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"/>




        <Button
            android:id="@+id/login_button1"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_below="@id/password_et1"
            android:layout_marginTop="30dp"
            android:background="#ff336699"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="登录" />
        <Button
            android:id="@+id/forgetpassword_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/login_button1"
            android:layout_below="@id/login_button1"
            android:background="#00000000"
            android:text="忘记密码"
            android:textSize="16sp" />
        <Button
            android:id="@+id/register_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/login_button1"
            android:layout_below="@id/login_button1"
            android:background="#00000000"
            android:gravity="left|center_vertical"
            android:text="注册"
            android:textSize="16sp"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>
